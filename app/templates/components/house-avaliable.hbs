{{#if apartment.editable}}
<div class="card" style="width: 22rem;">
  <div class="card-body">
    <h5 class="card-title">{{apartment.name}}</h5>
    <p class="card-text">Apartment in {{apartment.area}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Area: {{apartment.area}}</li>
    <li class="list-group-item">Start Date: {{apartment.startdate}}</li>
    <li class="list-group-item">End Date: {{apartment.enddate}}</li>
  </ul>
</div>
{{else}}
<div class="card" style="width: 22rem;">
  <div class="card-body">
    <h5 class="card-title">{{apartment.name}}</h5>
    <p class="card-text">Apartment in {{apartment.area}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Area: {{apartment.area}}</li>
    <li class="list-group-item">Start Date: {{apartment.startdate}}</li>
    <li class="list-group-item">End Date: {{apartment.enddate}}</li>
  </ul>
</div>
{{/if}}
